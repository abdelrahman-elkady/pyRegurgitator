#! /usr/bin/env python

"""Command line for pymap (always re-create all pages)"""

import sys
from optparse import OptionParser

from regurgitator.project.core import create_project_map


def main():
    usage = "usage: %prog MODULE"
    description = """
Python project (packages/modules) info.
Prints generated HTML in stdout.
"""
    parser = OptionParser(usage=usage, description=description)
    (options, args) = parser.parse_args()
    if len(args) != 1:
        parser.error("incorrect number of arguments")
    create_project_map(args[0])

if __name__ == "__main__":
    main()
